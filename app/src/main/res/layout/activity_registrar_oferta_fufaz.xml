<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kjhv"
    tools:context=".Registrar_oferta_fufaz">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="277dp"
        android:layout_height="197dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/fbg" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_centerVertical="true"
        android:text="Descripsion: "
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText21"
        android:layout_width="283dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="182dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="136dp"
        android:text="Tiempo"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="125dp"
        android:ems="10"
        android:inputType="date"
        android:textSize="16sp" />

    <Button
        android:id="@+id/guardarbtn"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText22"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-84dp"
        android:layout_marginBottom="25dp"
        android:background="?attr/actionBarDivider"
        android:onClick="btnOFF"
        android:text="guardar "
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>